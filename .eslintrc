{
  "env": {
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@stylistic"
  ],
  "overrides": [],
  "rules": {
    "@stylistic/semi": ["warn", "always"],
    "@stylistic/quotes": ["warn", "double"],
    "@stylistic/indent": ["warn", 2]
  },
  "ignorePatterns": [
    "lib/kreload.js", 
    "lib/kreload.d.ts"
  ]
}